<%- include("../partials/header") %>

    <div class="container text-center" style="margin-top: 100px; width: 600px;">
        <h1>EDIT COMMENT</h1>

        <form action="/reviews/<%= MovieInfo_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="container" style="width: 400px;">
                <div class="row d-flex align-content-around" style="height: 150px;">
                    <input class="form-control" name="comment[text]" rows="10" value="<%= comment.text %>" />
                    <input class="form-control btn btn-large btn-success" type="submit" />

                    <a href="/reviews/<%= MovieInfo_id %>" class="form-control btn btn-large btn-success pl-2">Go back</a
        >
      </div>
    </div>
  </form>
</div>
