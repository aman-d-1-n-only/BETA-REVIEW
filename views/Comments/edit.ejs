<%- include("../partials/header") %>
    <div class="edit-page">
        <div class="edit-page-overlay">
            <button id="menu-toggle" class=" ui icon button">
                <i class="chevron right icon"></i>
            </button>
            <div class="edit-form-heading">
                EDITING COMMENT
            </div>
            <div class="edit-form">
                <form action="/reviews/<%=review_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
                    <div class="field">
                        <label>COMMENT :</label>
                        <textarea class="edit-textarea" name="comment" id="" cols="30" rows="10"><%=comment.comment%></textarea>
                    </div>
                    <button class="ui right floated button">Update</button>
                    <button href="/reviews/<%=review_id%>" class="ui left floated button">Back</button>
                </form>
            </div>
        </div>
    </div>
    </div>
