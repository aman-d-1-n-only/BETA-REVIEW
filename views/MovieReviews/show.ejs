<%- include("../partials/header") %>
    <div class="container" style="margin-top: 100px; margin-bottom: 100px;">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Yelcamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div id="thumbnail" style="border : 1px solid grey; border-radius: 5px ; margin-bottom: 20px;">
                    <img src="<%=MovieInfo.image%>" style="width : 100%" class="img-responsive" />
                    <div id="style" style="margin : 9px">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>
                                    <a href="">
                                        <%=MovieInfo.title%>
                                    </a>
                                </h4>
                            </div>
                            <div class="col-md-6">
                                <h4 class="text-right">9.00$ / night</h4>
                            </div>

                        </div>

                        <p>
                            <%=MovieInfo.review%>
                        </p>

                        <div class="row">
                            <div class="col-md-12 text-right">

                                <strong><em>Reviewed By - </em></strong>
                                <span style="color:darkgreen"><b><%=MovieInfo.author.username%></b></span>
                            </div>
                        </div>
                        <div class="row py-2">
                            <%if(currentUser && MovieInfo.author.id.equals(currentUser._id)){%>
                                <div class="col-md-6">
                                    <span class="text-right">
                                    <a href="/moviereviews/<%= MovieInfo._id %>/edit" class="btn btn-warning btn-sm">EDIT REVIEW </a>
                                </span>

                                </div>

                                <div class="col-md-6 text-right">
                                    <form action="/moviereviews/<%=MovieInfo._id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger btn-sm"> Delete </button>
                                    </form>
                                </div>
                                <%}%>

                        </div>


                    </div>
                </div>

                <div class="jumbotron">
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <a href="/moviereviews/<%= MovieInfo._id %>/comments/new" class="btn btn-success">ADD NEW COMMENT </a>

                        </div>
                    </div>
                    <hr />
                    <% MovieInfo.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-6">
                                <strong><%= comment.author.username %> </strong>
                            </div>
                            <div class="col-md-6 text-right">

                                <a href="<%=MovieInfo._id%>/comments/<%=comment._id%>/edit" class="btn btn-sm btn-warning">EDIT</a>
                                <form style=" display: inline;" action="/moviereviews/<%=MovieInfo._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger btn-sm"> Delete </button>
                                </form>
                                <span class="px-2">10 days ago </span>
                            </div>


                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <p>
                                    <%= comment.text %>
                                </p>

                            </div>

                        </div>
                        <% }) %>
                </div>

            </div>
        </div>
    </div>
    </div>
    <%- include("../partials/footer") %>