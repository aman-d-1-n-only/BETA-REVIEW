<%- include("../partials/header") %>
    <div class="edit-page">
        <div class="edit-page-overlay">
            <div class="edit-form-heading">
                EDITING REVIEW
            </div>
            <div class="edit-form">
                <form action="/reviews/<%=review._id%>?_method=PUT" method="POST">
                    <div class="field ">
                        <label>REVIEW :</label>
                        <textarea class="edit-textarea" name="review" id="" cols="30" rows="10"><%=review.review %></textarea>
                    </div>
                    <button class="ui right floated button">Update</button>
                    <button href="/reviews/<%=review._id%>" class="ui left floated button">Back</button>
                </form>
            </div>
        </div>
    </div>
    <%- include("../partials/footer") %>